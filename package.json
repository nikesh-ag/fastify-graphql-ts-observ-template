{
  "name": "fastify-graphql-ts-observ-template",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev-delete": "ts-node-dev --no-notify --respawn --transpile-only src/app",
    "test-delete": "npm run build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"fastify start -w -l info -p 3001 --ignore-watch=.ts$ --verbose-watch -P dist/app.js\"",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "clean": "rm -rf dist",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "db:push": "prisma db push --preview-feature",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "test": "NODE_ENV=testing jest",
    "test:watch": "NODE_ENV=testing jest --watch --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikesh-ag/fastify-graphql-ts-observ-template.git"
  },
  "keywords": [
    "fastify",
    "graphql",
    "prisma",
    "nexus",
    "typescript",
    "mercurius"
  ],
  "author": "Nikesh Agarwal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com//nikesh-ag/fastify-graphql-ts-observ-template/issues"
  },
  "homepage": "https://github.com//nikesh-ag/fastify-graphql-ts-observ-template#readme",
  "dependencies": {
    "env-schema": "^3.3.0",
    "fastify": "^3.0.0",
    "fastify-autoload": "^3.3.1",
    "fastify-cli": "^2.13.0",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.0",
    "fluent-json-schema": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^15.0.0",
    "concurrently": "^6.2.1",
    "fastify-tsconfig": "^1.0.1",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
